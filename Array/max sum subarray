// naive approach use 3 nested for loops

// optimal approach using 2 nested for loops

class Solution {
    public int maxSubArray(int[] nums) {
        int maxi=Integer.MIN_VALUE;

        for(int i=0;i<nums.length;i++){
            int sum=0;
            for(int j=i;j<nums.length;j++){
                sum+=nums[j];
                maxi=Math.max(sum, maxi);
            }
        }
        return maxi;
    }
}

// better approach use one for loop only if sum goes negative assiogn sum as 0 

class Solution {
    public int maxSubArray(int[] nums) {
        int maxi=Integer.MIN_VALUE;
        int sum=0;

        for(int i=0;i<nums.length;i++){
            sum+=nums[i];

            if(maxi<sum){
                maxi=sum;
            }
            if(sum<0){
                sum=0;
            }
        }
        return maxi;
    }
}